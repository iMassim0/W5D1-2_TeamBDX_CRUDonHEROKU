<div class="container">
<h1>Création d'un nouveau Gossip</h1>

        <%= form_for @gossip, url: {action: "create"} do |g| %>

        <div class="form-group">
            <label>Anonymous author :</label><br>
            <%= g.text_field :anonymous_author %><br>
        </div>
        <div class="form-group">
            <label>Content :</label><br>
            <%= g.text_area :content, size: "50x3" %><br>
        </div>
        <div class="form-group">
            <button type=submit class="btn btn-primary">Créer le nouveau gossip</button>
        </div>

        <% end %>

</div>
