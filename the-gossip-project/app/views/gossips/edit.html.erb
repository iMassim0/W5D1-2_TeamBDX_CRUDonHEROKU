<div class="container">
<h3>Change moi ce gossip...</h3>

        <%= form_for @gossip, url: {action: "update"} do |g| %>
        <h4 class="text-danger" id="error"><%= flash[:error] %></h4>
        <div class="form-group">
            <label>Le pseudo va toujours l√† :</label><br>
            <%= g.text_field :anonymous_author, class: "text-muted" %><br>
        </div>
        <div class="form-group">
            <label>Et le reste ici !</label><br>
            <%= g.text_area :content, size: "50x3", class: "text-muted" %><br>
        </div>
        <div class="form-group">
            <button type=submit class="btn btn-primary">Modifier le gossip</button>
            <a href="<%= gossip_path(@gossip.id) %>" class="btn btn-outline-danger" data-method="DELETE" data-confirm="On supprime vraiment ?">Supprimer le gossip</a>
        </div>

        <% end %>

</div>
